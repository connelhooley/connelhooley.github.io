<nav class="site-nav">
  <div class="site-nav-items container">
    <a class="site-nav-item site-nav-home-link" href="/">
      {C.H}
    </a>
    <button id="site-nav-mobile-button" class="site-nav-item">
      <i id="site-nav-mobile-button-icon" class="fa-solid fa-fw fa-bars"></i>
      <span id="site-nav-mobile-button-label" class="sr-only">Open menu</span>
    </button>
    <div id="site-nav-menu-items">
      <% const navLinks = [
        { label: "Blog", href: "/blog/" },
        { label: "Project", href: "/projects/" },
        { label: "Experience", href: "/experience/" },
      ]; %>
      <% navLinks.forEach(({ label, href }) => { %>
        <% const active = it.route.startsWith(href) ? "site-nav-item-active" : "" %>
        <a class="site-nav-item <%= active %>" href="<%= href %>">
          <%= label %>
        </a>
      <% }); %>
    </div>
  </div>
</nav>
<main>
  <%~ it.body %>
</main>
<footer class="site-footer">
</footer>